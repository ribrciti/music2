
<div class="card m-4">
<h2 class="bg-dark text-white p-4">
  <strong><%= @band.name %></strong>
</h2>

<% if @band.albums.any? %>
  <% @band.albums.each do |band_album| %>
  <div class="card font-weight-bold bg-secondary text-white">
    <h4 class="">
      <%= band_album.name %>
    </h4>
  </div>
  <% end %>


  <h3 class="m-4 text-center">Edit <%= @band.name %> Albums </h3>
  <%= render @band.albums %>
<% end %>

<hr>

<h3 class="text-center">Add an <%= @band.name %> Album</h3>
<%= render 'albums/form', album: @band.albums.build %>

</div>
<div class="button m-4">

<%= link_to 'Edit', edit_band_path(@band),  class: "btn btn-sm btn-outline-primary" %>
<%= link_to 'Back', bands_path,  class: "btn btn-sm btn-outline-primary ml-2" %>
</div>
